\ProvidesPackage{title-page}

\newif\ifLogo
\newif\ifInstitute
\newif\ifFaculty
\newif\ifDepartment
\newif\ifSubtitle
\newif\ifSupervisor

\newcommand*{\logo}[1]{\gdef\@logo{#1}\Logotrue}
\newcommand*{\institute}[1]{\gdef\@institute{#1}\Institutetrue}
\newcommand*{\faculty}[1]{\gdef\@faculty{#1}\Facultytrue}
\newcommand*{\department}[1]{\gdef\@department{#1}\Departmenttrue}
\newcommand*{\subtitle}[1]{\gdef\@subtitle{#1}\Subtitletrue}
\newcommand*{\supervisor}[1]{\gdef\@supervisor{#1}\Supervisortrue}


\renewcommand*{\maketitle}{	
    \begin{titlepage}
	\center % Centre everything on the page
	
	%------------------------------------------------
	%	Headings
	%------------------------------------------------
	\ifInstitute
        {\textsc{\LARGE\@institute\vspace{0.1\textheight-1em}}\unskip\\}
        \else
        $\;$
        \vspace{0.1\textheight}
        \fi
	\ifFaculty
        {\textsc{\Large\@faculty\vspace{0.1\textheight-1em}}\unskip\\}
        \else
        \vspace{0.1\textheight}
        \fi
	\ifDepartment
        {\textsc{\large\@department\vspace{0.1\textheight-1em}}\unskip\\}
        \else
        \vspace{0.1\textheight}
        \fi
	%------------------------------------------------
	%	Title
	%------------------------------------------------
	
	\vspace{0.02\textheight}
	
	{\huge\bfseries \@title}\vspace{0.01\textheight} % Title of your document
	
	\vspace{0.03\textheight}
	
    \ifSubtitle
    {\Large\textit{\@subtitle}\vspace{0.1\textheight-1em}}
    \else
    \vspace{0.1\textheight}
    \fi
	%------------------------------------------------
	%	Author(s)
	%------------------------------------------------
    \ifSupervisor
	\begin{minipage}{0.4\textwidth}
		\begin{flushleft}
			\large
			\textit{Author}\\
			\@author 
		\end{flushleft}
	\end{minipage}
	~
	\begin{minipage}{0.4\textwidth}
		\begin{flushright}
			\large
			\textit{Supervisor}\\
			\@supervisor
		\end{flushright}
	\end{minipage}
    \else
    {\large\textit{Author}\\\@author}
    \fi	
	%------------------------------------------------
	%	Date
	%------------------------------------------------
	
	\vfill\vfill\vfill % Position the date 3/4 down the remaining page
	
	{\large\today} % Date, change the \today to a set date if you want to be precise
	
	%------------------------------------------------
	%	Logo
	%------------------------------------------------
	
	\ifLogo
    \vfill\vfill
    \includegraphics[width=0.2\textwidth]{\@logo}\vspace{0.1\textheight-1em} % Include a department/university logo - this will require the graphicx package
	\fi    
	%----------------------------------------------------------------------------------------
	
	\vfill % Push the date up 1/4 of the remaining page
    \end{titlepage}
}
